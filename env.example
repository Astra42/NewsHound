# ==============================================================================
# NewsHound Environment Variables
# Скопируйте этот файл в .env и заполните значения:
#   cp env.example .env
# ==============================================================================

# ==============================================================================
# API КЛЮЧИ (ОБЯЗАТЕЛЬНО)
# ==============================================================================

# Mistral AI API Key
# Получить: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# Telegram API Credentials
# Получить: https://my.telegram.org/apps
APP_ID_TG=your_telegram_app_id
API_HASH_TG=your_telegram_api_hash

# Telegram Phone (ОБЯЗАТЕЛЬНО для парсинга каналов)
# ВАЖНО: Боты не могут читать историю каналов (ограничение Telegram API).
# Для парсинга каналов нужна авторизация через пользовательский аккаунт.
# Формат: +79991234567 (номер телефона с кодом страны)
# Интерактивный ввод отключен - телефон должен быть указан в .env
TELEGRAM_PHONE=+79991234567

# Telegram Code (опционально, только для первой авторизации)
# Код подтверждения, который приходит в Telegram при первой авторизации.
# После первой успешной авторизации сессия сохраняется и код больше не нужен.
# Можно оставить пустым - тогда при первой авторизации код нужно будет ввести вручную один раз.
TELEGRAM_CODE=

# ==============================================================================
# QDRANT (опционально, есть значения по умолчанию)
# ==============================================================================

# QDRANT_HOST=localhost
# QDRANT_PORT=6333
# QDRANT_COLLECTION=news

# ==============================================================================
# LLM НАСТРОЙКИ (опционально)
# ==============================================================================

# Модель Mistral (mistral-small-latest, mistral-medium-latest, mistral-large-latest)
# LLM_MODEL=mistral-small-latest

# Таймаут запросов к LLM (секунды)
# LLM_TIMEOUT=60.0

# Количество повторных попыток при ошибках
# LLM_MAX_RETRIES=3

# ==============================================================================
# EMBEDDING НАСТРОЙКИ (опционально)
# ==============================================================================

# Модель для эмбеддингов (HuggingFace)
# EMBEDDING_MODEL=sergeyzh/rubert-mini-frida

# Устройство для вычислений (cpu/cuda)
# EMBEDDING_DEVICE=cpu

# ==============================================================================
# RAG НАСТРОЙКИ (опционально)
# ==============================================================================

# Количество документов для контекста
# RETRIEVAL_K=5

# Размер чанка для разбиения текста
# CHUNK_SIZE=500

# Перекрытие чанков
# CHUNK_OVERLAP=50

# ==============================================================================
# API НАСТРОЙКИ (опционально)
# ==============================================================================

# API_HOST=0.0.0.0
# API_PORT=8000
# API_DEBUG=false

# ==============================================================================
# TELEGRAM ПАРСЕР (опционально)
# ==============================================================================

# Лимит сообщений при парсинге канала
# TELEGRAM_MESSAGE_LIMIT=100

